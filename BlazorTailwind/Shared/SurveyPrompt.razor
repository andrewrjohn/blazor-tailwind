<div class="bg-green-400 mt-4 p-4 rounded-lg" role="alert">
    <span class="mr-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="whitespace-nowrap">
        Please take our
        <a target="_blank" class="border-b-2 border-gray-900" href="https://go.microsoft.com/fwlink/?linkid=2137813">brief survey</a>
    </span>
    and tell us what you think.
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }
}
